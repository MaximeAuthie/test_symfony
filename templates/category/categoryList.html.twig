{% extends 'base.html.twig' %}

{% block title %}Liste Article{% endblock %}

{% block body %}
    <h1 class="text-center mt-5">Liste des catégories</h1>
    <div class="d-grid w-25 mx-auto mt-4 mb-5">
        <a class="btn btn-primary" href="{{ path('app_category_add')}}" role="button">Ajouter une catégorie</a>
    </div>
    {% for categorie in liste %}
        <div class="card mx-auto w-25 bg-light bg-gradient mb-5">
            <div class="card-header">
                <h5 class="card-title text-uppercase text-primary ">{{categorie.id}} - {{categorie.nom}}</h5>
            </div>
            <div class="card-body">
                <a href="{{ path('app_category_update', {'id':categorie.id}) }}"><i class="fa-solid fa-pen-to-square"></i></a> {# ici on créé un lien vers une route en utilisant la fonction path()=> permet de changer le nom ou le chemin de la route sans avoir besoin de l'actualiser ici #}
                <a href="{{ path('app_category_delete', {'id':categorie.id}) }}"><i class="fa-solid fa-trash-can"></i></a>  
            </div>
        </div>
    {% endfor %}
    {% if message %}
        <div class="alert alert-dismissible alert-danger w-50 mx-auto mt-5">
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            <strong>{{ message }}</strong>.
        </div>
    {% endif %}
    
{% endblock %}
